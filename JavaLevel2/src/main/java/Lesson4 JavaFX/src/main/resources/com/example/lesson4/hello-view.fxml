<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Menu?>
<VBox spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.lesson4.HelloController">
    <MenuBar>
        <Menu text="File">
            <Menu text="Exit" onAction="#exitMenuSelect" />
        </Menu>
    </MenuBar>
    <TextArea fx:id="messageArea" VBox.vgrow="ALWAYS" editable="false"/>
    <HBox>
        <TextField fx:id="message" HBox.hgrow="ALWAYS" />
        <Button text="Send" onAction="#onSendButtonClick" defaultButton="true"/>
    </HBox>

</VBox>
